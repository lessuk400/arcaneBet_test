!!!

%html
  %head
    %title= yield(:title).presence || page_title

    = favicon_link_tag 'favicon.ico'

    = stylesheet_link_tag 'application', media: :all
    = stylesheet_pack_tag 'main'

    = controller_stylesheet_link_tag
    = action_stylesheet_link_tag

    = javascript_pack_tag 'application'
    = javascript_include_tag 'application'

    = controller_script_include_tag data: { turbolinks_track: :reload }
    = action_script_include_tag     data: { turbolinks_track: :reload }

    = csrf_meta_tags

  %body
    = render 'layouts/navigation'
    = render 'layouts/flash'

    .content
      = yield