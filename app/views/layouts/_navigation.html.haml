#page-top
  %nav.navbar.navbar-expand.navbar-dark.bg-dark.static-top.justify-content-between
    = link_to t('layouts.navbar.root_link'), root_path, class: '.navbar-brand.mr-1'

    - if current_user.present?
      %ul.navbar-nav.ml-auto.ml-md-0
        %li.nav-item.dropdown.no-arrow
          %a#userDropdown.nav-link.dropdown-toggle{ 'aria-expanded': 'false', 'aria-haspopup': 'true', 'data-toggle': 'dropdown', href: '#', role: 'button' }
            %i.fas.fa-user-circle.fa-fw
          .dropdown-menu.dropdown-menu-right{'aria-labelledby': 'userDropdown'}
            %a.dropdown-item{ 'data-target': '#logoutModal', 'data-toggle': 'modal', href: '#' }= t('layouts.navbar.log_out')